@page
@model Admin.IndexModel

<style>
.layout table .input-container {
  margin: 0 auto;
  /* 1024px if root is set to 16px */
  max-width: 64rem;
  width: 100%;
}
.input-container {
    display: flex;
    justify-content:space-between;
    width: 20%;
}
</style>
<div class="layout">
    <h2>Member Search</h2>
    <form method="post">
        <div class="input-container">
            <span>Last Name:</span><input asp-for="LastName" />
        </div>
        <div class="input-container">
            <span>Email:</span><input asp-for="Email" />
        </div>
        <input type="submit" value="Search" />
    </form>
    @if (Model.Members.Count > 0) {
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Members[0].LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Members[0].FirstName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Members) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.RowKey">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.RowKey">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.RowKey">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
    }
</div>