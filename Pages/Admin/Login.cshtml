@page
@model LoginModel
@{
    ViewData["Title"] = "Admin Login";
}
    <div class="layout">
        <h2>@ViewData["Title"]</h2>
        <form method="post">
            <div class="input-form">
                <div class="input-container">
                    <span>Email:</span><input asp-for="Email" type="email" required />
                </div>
                <div class="input-container">
                    <span>Password:</span><input asp-for="Password" type="password" required/>
                </div>
                <div class="submit-button">
                    <input type="submit" value="Login" />
                </div>
                @Html.ValidationSummary()
            </div>
        </form>
    </div>